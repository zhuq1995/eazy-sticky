{
    "compilerOptions": {
        // 严格模式配置
        "strict": true,
        // 编译目标和模块系统
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        // 类型库（Node.js 环境）
        "lib": [
            "ES2020"
        ],
        // 类型定义（Electron 主进程）
        "types": [
            "node",
            "electron"
        ],
        // 其他编译选项
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": [
        "electron/**/*",
        "vite.config.ts"
    ]
}