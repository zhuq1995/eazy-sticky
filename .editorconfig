# EditorConfig 配置文件
# https://editorconfig.org

# 顶级配置文件
root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 文件保留尾随空格（用于换行）
[*.md]
trim_trailing_whitespace = false

# JSON 文件
[*.json]
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_size = 2

# TypeScript/JavaScript 文件
[*.{ts,tsx,js,jsx,vue}]
indent_size = 2

# Python 文件
[*.py]
indent_size = 4

# Makefile 必须使用 tab
[Makefile]
indent_style = tab
