{
    "compilerOptions": {
        // 严格模式配置
        "strict": true,
        // 编译目标和模块系统
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        // 类型库
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        // 路径别名配置
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        // 类型定义
        "types": [
            "vite/client",
            "node"
        ],
        // 其他编译选项
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "useDefineForClassFields": true
    },
    "include": [
        "src/**/*",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}